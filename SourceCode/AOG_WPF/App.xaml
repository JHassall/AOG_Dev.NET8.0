<!--
WPF Application Entry Point
===========================
This is the main application entry point for the WPF 3D migration of AgOpenGPS.

Migration Architecture:
- Replaces the Windows Forms Application.Run() pattern with WPF Application
- Provides application-wide resource definitions and startup configuration
- Handles application lifecycle events and global error handling

ABLS Integration:
- Configures application for DEM data loading and 3D terrain visualization
- Sets up logging and error handling for agricultural sensor integration
-->
<Application x:Class="AOG_WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    
    <Application.Resources>
        <!-- 
        Global Application Resources
        ============================
        Define application-wide styles, brushes, and templates
        -->
        
        <!-- Agricultural Color Scheme -->
        <SolidColorBrush x:Key="FieldGreenBrush" Color="#4CAF50"/>
        <SolidColorBrush x:Key="TractorBlueBrush" Color="#2196F3"/>
        <SolidColorBrush x:Key="BoomOrangeBrush" Color="#FF9800"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="ControlPanelBrush" Color="#FFFFFF"/>
        
        <!-- 
        3D Visualization Colors
        =======================
        Colors specifically for 3D rendering components
        -->
        <SolidColorBrush x:Key="TerrainBrush" Color="#8BC34A"/>
        <SolidColorBrush x:Key="GuidanceLineBrush" Color="#FF5722"/>
        <SolidColorBrush x:Key="BoundaryBrush" Color="#9C27B0"/>
        <SolidColorBrush x:Key="CoveredAreaBrush" Color="#4CAF50"/>
        <SolidColorBrush x:Key="UncoveredAreaBrush" Color="#FFC107"/>
        
        <!-- 
        Typography
        ==========
        Consistent fonts for agricultural application UI
        -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>
        
        <Style x:Key="BodyTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#666666"/>
        </Style>
        
        <!-- 
        Control Styles
        ==============
        Consistent styling for buttons, panels, and other controls
        -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource TractorBlueBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- 
        Panel Styles
        ============
        Consistent styling for control panels and containers
        -->
        <Style x:Key="ControlPanelStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource ControlPanelBrush}"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="4"/>
        </Style>
        
    </Application.Resources>
</Application>
